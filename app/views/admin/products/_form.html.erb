<%= form_with model: [:admin, product], local: true do |form| %>
  <div class="mb-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :category, class: "form-label" %>
    <%= form.text_field :category, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :price, class: "form-label" %>
    <%= form.number_field :price, step: 0.01, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :image_url, "Image URL", class: "form-label" %>
    <%= form.text_field :image_url, class: "form-control" %>
  </div>

  <%= form.submit class: "btn btn-primary" %>
<% end %>
